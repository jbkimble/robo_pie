<h1> Edit Your Information </h1>

<%= form_for @admin do |f| %>
  <%= render partial: "shared/errors", locals: { target: @admin } %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zip %>
  <%= f.text_field :zip %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.label :password_confirmation, "Password Confirmation"%>
  <%= f.text_field :password_confirmation %>

  <%= f.submit "Update Info" %>
<% end %>
